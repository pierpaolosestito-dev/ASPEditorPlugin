{
	"name": "asp-language-support-dlv2",
	"displayName": "ASP Language Support for DLV2 System",
	"description": "An extension for Answer Set Programming using the DLV2 System",
	"version": "0.1.0",
	"publisher": "VSCodeEditor",
	"engines": {
		"vscode": "^1.74.3"
	},
	"author": {
		"name": "VSCodeEditor"
	},
	"categories": [
		"Programming Languages",
		"Themes"
	],
	"activationEvents": [
		"onLanguage:asp",
		"onView:asp-language-support-dlv2.interface",
		"onCommand:asp-panel.ASPCookbook",
		"onView:asp-panel.ASPCookbook"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "asp",
				"aliases": [
					"Answer-Set-Programming",
					"asp"
				],
				"extensions": [
					".asp",
					".dlv",
					".lp"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./images/icon.png",
					"dark": "./images/icon.png"
				}
			}
		],
		"grammars": [
			{
				"language": "asp",
				"scopeName": "source.asp",
				"path": "./syntaxes/asp.tmLanguage.json"
			}
		],
		"themes": [
			{
				"label": "DarkASP",
				"uiTheme": "vs-dark",
				"path": "./themes/DarkASP-color-theme.json"
			},
			{
				"label": "LightASP",
				"uiTheme": "vs",
				"path": "./themes/LightASP-color-theme.json"
			}
		],
		"commands": [
			{
				"command": "asp-panel.ASPCookbook",
				"title": "ASP Cookbook"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ASPCookbook",
					"title": "ASP Cookbook",
					"icon": "media/icon/icon.svg"
				}
			]
		},
		"views": {
			"ASPCookbook": [
				{
					"type": "webview",
					"id": "asp-panel.ASPCookbook",
					"name": "ASP Cookbook"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts",
		"build": "tsc",
		"test": "node ./out/test/runTest.js",
		"bdd_test": "./node_modules/.bin/cucumber-js -p a",
		"antlr4ts": "antlr4ts -visitor ./src/parser/ASPCore2.g4"
	},
	"devDependencies": {
		"@types/chai": "^4.3.4",
		"@types/cucumber": "^7.0.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"@vscode/test-electron": "^2.2.2",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"chai": "^4.3.7",
		"cucumber": "^6.0.7",
		"cucumber-pretty": "^6.0.1",
		"cucumber-tsflow": "^4.0.0-rc.7",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"jest": "^29.3.1",
		"mocha": "^10.2.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pierpaolosestito-dev/ASPEditorPlugin.git"
	},
	"homepage": "https://github.com/pierpaolosestito-dev/ASPEditorPlugin/blob/main/README.md",
	"dependencies": {
		"@types/vscode": "^1.69.0",
		"antlr4ts": "^0.5.0-alpha.4",
		"sys": "^0.0.1",
		"util": "^0.12.5",
		"vscode-test": "^1.6.1"
	}
}
